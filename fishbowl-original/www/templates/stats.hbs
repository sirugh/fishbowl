<div class="row">
  <div class="col s12 center-align">
    <h4>{{message}}</h4>
  </div>
</div>
<div class="row">
  <div class="col s12 center-align">
  {{#if rule}}
    <h5>({{rule}})</h5>
  {{/if}}
  </div>
</div>
<div class="row">
  <div class="col s12">
    {{#each teams}}
    <div class="col s6 center-align">
      <ul class="collection with-header">
        <li class="collection-header">
          <h5 class="team-name">{{this.name}}</h5>
        </li>
        <li class="collection-item team-score">
          {{this.score}}
        </li>
      </ul>
    </div>
    {{/each}}
  </div>
</div>
<div class="row">
  <div class="col s12">
    <div class="center-align">
      <button id="continue" class="center-align btn btn-large waves-effect waves-light">Continue</button>
    </div>
  </div>
</div>